<Window x:Class="Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="First landing page" Height="872" Width="1000">
    <Grid Height="844" Width="940" VerticalAlignment="Top">
        <Grid Height="74" HorizontalAlignment="Left" Margin="209,12,0,0" Name="Grid1" VerticalAlignment="Top" Width="550">
