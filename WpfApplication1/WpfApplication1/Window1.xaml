        <Grid Height="740" HorizontalAlignment="Left" Margin="0,92,0,0" Name="Grid2" VerticalAlignment="Top" Width="928">
            <Grid Height="564" Margin="16,25,0,151">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="882*" />
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>
        <TabControl Height="740" HorizontalAlignment="Left" Margin="12,92,0,0" Name="TabControl1" VerticalAlignment="Top" Width="922">
            <TabItem Header="Details" Name="TabItem1">
                <Grid Height="564">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="882*" />
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Last Visits" Name="TabItem2"></TabItem>
        </TabControl>
    </Grid>

</Window>
